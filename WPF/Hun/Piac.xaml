<Window x:Class="RPG_nagymarci_WPF.Piac"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG_nagymarci_WPF"
        mc:Ignorable="d"
        Title="Piac" Height="300" Width="450"
        FontFamily="Rockwell"
        FontSize="20">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00837E" Offset="0" />
            <GradientStop Color="#1E1E2E"  Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>

        <Button Content="Fekete Kávé" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Width="266" Height="26" Click="Feketekave">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button Content="Vak Botyján Kardja" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="266" Height="26" Click="Vbjkard">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button Content="Kulcs a katakombákhoz" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="266" Height="27" Click="Katakulcs">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button Content="Térkép a katakombák lezárt részéhez" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="266" Height="26" Click="Kataterkep">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button Content="Szerencsetalizmán" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top" Width="266" Height="26" Click="Szerencse">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button Content="---" HorizontalAlignment="Left" Margin="10,188,0,0" VerticalAlignment="Top" Width="266" Height="26">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button Content="---" HorizontalAlignment="Left" Margin="10,219,0,0" VerticalAlignment="Top" Width="266" Height="26">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Canvas Margin="367,0,0,243">
            <TextBlock x:Name="penz0" Text="0 G" FontSize="30" FontWeight="Bold">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="#B8860B"/>

                </TextBlock.Foreground>
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock x:Name="penz1" Text="0 G" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Width="82">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FFD700" Offset="0.0"/>
                        <GradientStop Color="#DAA520" Offset="0.5"/>
                        <GradientStop Color="#B8860B" Offset="1.0"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </Canvas>
        <Label Content="5 G" HorizontalAlignment="Left" Margin="292,34,0,0" VerticalAlignment="Top"/>
        <Label Content="100 G" HorizontalAlignment="Left" Margin="292,63,0,0" VerticalAlignment="Top"/>
        <Label Content="30 G" HorizontalAlignment="Left" Margin="292,93,0,0" VerticalAlignment="Top"/>
        <Label Content="50 G" HorizontalAlignment="Left" Margin="292,122,0,0" VerticalAlignment="Top"/>
        <Label Content="25 G" HorizontalAlignment="Left" Margin="292,152,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="292,212,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="292,182,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
