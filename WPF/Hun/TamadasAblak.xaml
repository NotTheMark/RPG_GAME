<Window x:Class="RPGProjekt.TamadasAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Támadás" Height="250" Width="400" 
        FontFamily="Rockwell">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00837E" Offset="0" />
            <GradientStop Color="#1E1E2E"  Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock Text="Válaszd ki a támadót:" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbTamado" Margin="10,53,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Válaszd ki a célpontot:" Margin="10,93,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbCelpont" Margin="10,113,10,0" VerticalAlignment="Top"/>

        <Button Content="Támadás" x:Name="TamadasGomb" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="TamadasGomb_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.4"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
