<Window x:Class="RPGProjekt.TamadasAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Támadás" Height="250" Width="400">
    <Grid>
        <TextBlock Text="Válaszd ki a támadót:" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbTamado" Margin="10,30,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Válaszd ki a célpontot:" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbCelpont" Margin="10,90,10,0" VerticalAlignment="Top"/>

        <Button Content="Támadás" x:Name="TamadasGomb" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="TamadasGomb_Click"/>
    </Grid>
</Window>
